{
	"name": "emmylua-unity",
	"displayName": "EmmyLuaUnity",
	"description": "make emmylua get unity api",
	"keywords": [
		"lua",
		"emmylua",
		"unity"
	],
	"version": "3.0.0",
	"author": "CppCXY",
	"publisher": "CppCXY",
	"engines": {
		"vscode": "^1.95.0",
		"node": ">=18.0.0"
	},
	"repository": "https://github.com/CppCXY/VSCode-EmmyLua-Unity",
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:lua"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "emmylua.unity.pull",
				"title": "EmmyLua Unity: Pull Unity API",
				"icon": "$(sync)"
			},
			{
				"command": "emmylua.unity.showOutput",
				"title": "EmmyLua Unity: Show Output",
				"icon": "$(output)"
			},
			{
				"command": "emmylua.unity.openSettings",
				"title": "EmmyLua Unity: Open Settings",
				"icon": "$(settings-gear)"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "emmylua.unity.pull",
					"group": "emmylua@1"
				}
			],
			"commandPalette": [
				{
					"command": "emmylua.unity.pull"
				},
				{
					"command": "emmylua.unity.showOutput"
				},
				{
					"command": "emmylua.unity.openSettings"
				}
			]
		},
		"configuration": {
			"title": "EmmyLua Unity",
			"properties": {
				"emmylua.unity.framework": {
					"type": "string",
					"enum": [
						"XLua",
						"ToLua"
					],
					"default": "XLua",
					"description": "Lua framework to use (宿主Lua框架)",
					"enumDescriptions": [
						"Tencent's xLua framework",
						"ToLua framework"
					]
				},
				"emmylua.unity.project_sln": {
					"type": "string",
					"default": "",
					"description": "Path to Unity project .sln file. Supports absolute path, relative path, or ${workspaceFolder} variable (Unity项目.sln文件路径，支持绝对路径、相对路径或${workspaceFolder}变量)",
					"scope": "resource"
				},
				"emmylua.unity.output_dir": {
					"type": "string",
					"default": ".EmmyLuaUnity",
					"description": "Output directory for generated API files (API文件输出目录)",
					"scope": "resource"
				},
				"emmylua.unity.msbuild_properties": {
					"type": "object",
					"default": {},
					"description": "Additional MSBuild properties to pass to the build process (传递给MSBuild的额外属性)",
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"lint:fix": "eslint src --ext ts --fix",
		"test": "node ./out/test/runTest.js",
		"prepare": "node ./build/prepare.js",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/node": "^20.x",
		"@types/vscode": "^1.95.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"@vscode/test-electron": "^2.4.0",
		"@vscode/vsce": "^3.0.0",
		"eslint": "^9.0.0",
		"typescript": "^5.6.0"
	},
	"dependencies": {
		"adm-zip": "^0.5.16"
	}
}