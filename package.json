{
	"name": "emmylua-unity",
	"displayName": "EmmyLuaUnity",
	"description": "make lua get unity api",
	"keywords": [
		"lua",
		"emmylua",
		"unity"
	],
	"version": "1.0.1",
	"author": "CppCXY",
	"publisher": "CppCXY",
	"engines": {
		"vscode": "^1.68.0"
	},
	"repository": "https://github.com/CppCXY/EmmyLuaUnity",
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:lua"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "emmylua.unity.pull",
				"title": "pull unity api"
			}
		],
		"menus": {
            "explorer/context": [{
                    "command": "emmylua.unity.pull"
                }
            ]
        },
		"configuration": {
			"title": "EmmyLuaUnity",
			"properties": {
				"emmylua.unity.namespace": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"UnityEngine"
					],
					"description": "导出unityapi所在的命名空间"
				},
				"emmylua.unity.targetPlugin": {
					"type": "string",
                    "enum": ["emmylua", "sumneko_lua"],
                    "default": "emmylua",
                    "description": "主要lua插件",
                    "enumDescriptions": [
                        "emmylua 插件是该插件的主要支持插件",
						"sumneko_lua 暂未支持"
                    ]
				},
				"emmylua.unity.framework": {
					"type": "string",
                    "enum": ["xlua", "tolua"],
                    "default": "xlua",
                    "description": "宿主lua框架",
                    "enumDescriptions": [
                        "xlua",
						"tolua"
                    ]
				},
				"emmylua.unity.sln": {
					"type": "string",
					"default": "",
					"description": "当配置该选项时，插件一定会打开该unity工程然后注入到主插件中"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.68.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"download": "^8.0.0"
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.1"
	}
}
